{
	"compilerOptions": {
		"checkJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"target": "ESNext",
		"module": "ESNext",
		"lib": [
			"ESNext"
		],
		"baseUrl": ".",
		"useDefineForClassFields": true,
		"strict": true,
		"allowUnreachableCode": false,
		"strictNullChecks": false,
		"noImplicitAny": false,
	},
	"exclude": [
		"dist",
		"node_modules",
		"build",
		".vscode",
		"coverage",
		"jspm_packages",
		"tmp",
		"temp",
		"bower_components",
		".npm",
		".yarn"
	],
	"typeAcquisition": {
		"enable": true
	}
}