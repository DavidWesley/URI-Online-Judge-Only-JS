{
	"compilerOptions": {
		"checkJs": true,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"target": "esnext",
		"module": "esnext",
		"lib": [
			"es2019.array",
			"es2019.object",
			"es2020.bigint",
			"es2021.string"
		],
		"baseUrl": ".",
		"useDefineForClassFields": true,
		"strict": true,
	},
	"exclude": [
		"dist",
		"node_modules",
		"build",
		".vscode",
		"coverage",
		"jspm_packages",
		"tmp",
		"temp",
		"bower_components",
		".npm",
		".yarn"
	],
	"typeAcquisition": {
		"enable": true
	}
}