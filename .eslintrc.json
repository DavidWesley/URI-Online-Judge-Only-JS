{
	"env": {
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "script",
		"ecmaFeatures": {
			"globalReturn": false,
			"impliedStrict": true
		}
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"implicit-arrow-linebreak": [
			"error",
			"beside"
		],
		"quotes": [
			"warn",
			"double"
		],
		"semi": [
			"error",
			"never"
		]
	}
}